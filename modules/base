FROM ubuntu:bionic
MAINTAINER Xavier Marchal xavier.marchal@loria.fr
RUN apt-get update && apt-get install -y --no-install-recommends git ca-certificates cmake make build-essential libsqlite3-dev libssl-dev libboost-system-dev libboost-filesystem-dev libboost-date-time-dev libboost-iostreams-dev libboost-regex-dev libboost-program-options-dev libboost-chrono-dev libboost-thread-dev libboost-log-dev python libtbb-dev && git clone https://github.com/named-data/ndn-cxx --branch ndn-cxx-0.6.1 --single-branch && cd ndn-cxx && ./waf configure && ./waf && ./waf install && ldconfig && cd .. && rm -r ndn-cxx && apt-get remove -y git ca-certificates && apt-get autoremove -y && apt-get autoclean && rm -r /var/lib/apt/lists/*
